<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div id="header">
        @if (ViewBag.WelcomeText == null) {
            {Html.RenderAction("Summary", "Cart");}
        }
        <div class="title">SPORTS STORE</div>
    </div>
    <div id="categories">       
        @{ Html.RenderAction("Menu", "Nav"); }
        @{ Html.RenderAction("DiscountMenu", "Nav");}
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        @Html.ActionLink("Home", "HomepageList", "Product")
        @Html.ActionLink("Admin Area", "Login", "Account")
        @Html.ActionLink("Sitemap", "Index", "Sitemap")
    </div>
</body>
</html>

